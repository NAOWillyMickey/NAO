{# src/Ornito/TaxrefBundle/Ressource/views/Main/index.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
  -
{% endblock %}

{% block content %}{{ parent() }}
  <!-- CONTENT HERE -->
  <!-- PAGE TITLE -->
  <h1 class="band_title deepshd">INVENTAIRE</h1>
  <!-- PAGE OPTION MENU -->
  <div id="option-menu" class="d-flex justify-content-center row">
    <!-- END PAGINATION OPTION FORM -->
    <!-- BIRD SEARCH FORM -->
    <div id="birdCardSearh" class="input-group">
      <form id="birdCardSearhForm" name="birdCardSearhForm" class="col-md-12 d-flex justify-content-center align-items-end flex-wrap">
        <div class="margin-5  form-group ">
          <label for="ref-ordre" class="input-group-addon">Ordre</label>
          <select id="ref-ordre" class="form-control" name="ordre">
            <option disabled selected value="">----------</option>
              {% for item in ordreList %}
                <option value="{{ item.ordre }}">{{ item.ordre }}</option>
              {% endfor %}
          </select>
        </div>
        <div class="margin-5  form-group ">
          <label for="ref-famille" class="input-group-addon">Famille</label>
          <select id="ref-famille" class="form-control" name="family">
            <option disabled selected value="">----------</option>
              {% for item in familyList %}
                <option value="{{ item.family }}">{{ item.family }}</option>
              {% endfor %}
          </select>
        </div>
        <div class="margin-5  form-group ">
          <label for="ref-nomScientifique" class="input-group-addon">Nom Scientifique</label>
          <select id="ref-nomScientifique" class="form-control" name="scientificName">
            <option disabled selected value="noVern">----------</option>
              {% for item in scientificList %}
                <option value="{{ item.scientificName }}">{{ item.scientificName }}</option>
              {% endfor %}
          </select>
        </div>
        <div class="margin-5  form-group ">
          <label for="ref-nomVernaculaire" class="input-group-addon">Nom Vernaculaire</label>
          <select id="ref-nomVernaculaire" class="form-control" name="vernFr">
            <option disabled selected value="noVern">----------</option>
              {% for item in vernList %}
                <option value="{{ item.vernFr }}">{{ item.vernFr }}</option>
              {% endfor %}
          </select>
        </div>
        <div>
          <input id="birdCardSearhFormSubmit" value="Rechercher" type="submit" name="birdCardSearhFormSubmit" class="btn btn-lg btn-success"/>
          <i class="fa fa-check"></i>
        </div>
        <a hidden id="path" href="{{ url('ornito_inventory_search') }}"></a>
      </form>
    </div>
    <!-- BIRD SEARCH FORM -->
  </div>
  <!-- END PAGE OPTION MENU -->
  <!-- CONTENT CONTAINER -->
  <hr>
  <div class="col-xs-11 col-md-9 col-lg-8 container">
    <div class="row">
      <div class="col-md-12 ">
        <!-- CONTENT -->
        <div class="container">
          <div class="">
            <h1 class="text-uppercase page-title">Résultat de la recherche</h1>
          </div>
          <ul class="timeline">
            <!-- TIMELINE ARTICLE -->
            <article class="timeline">
              <li class="timeline-inverted">
                <aside class="timeline-badge">
                  <span class="letter-badge-container">
                    <i class="letter-badge fa fa-b fa-2x shadowed" aria-hidden="true">O</i>
                  </span>
                  <span class="margin-left-10 badge badge-info dropdown-name">Oiselo</span>
                  <i class="fa fa-book"></i>
                </aside>
                <div class="timeline-panel">
                  <div class="timeline-heading">
                    <div class="margin-top-0  float-right  btn-group">
                      <!--START Option panel Menu -->
                      <button type="button" class="btn btn-primary btn-sm" data-toggle="dropdown">
                        <i class="fa fa-ellipsis-h"></i>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li>
                          <a href="#">Action</a>
                        </li>
                        <li>
                          <a href="#">Another action</a>
                        </li>
                        <li>
                          <a href="#">Something else</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                          <a href="#">Separated link</a>
                        </li>
                      </ul>
                    </div>
                    <!--END Option panel Menu -->
                    <h4 class="text-uppercase font-size-16 card-title">Ovidus Ovidareus</h4>
                    <time class="obs-time">
                      <i class="fa fa-calendar"></i>
                      Mis à Jour: Le MERCREDI 07 MARS 2018 à 18h30</time>
                  </div>
                  <div class="timeline-body">
                    <!-- Presult PANEL -->
                    <div class="container">
                      <span class="margin-bottom-5 font-size-14 italic badge badge-pill badge-success">
                        Nom Scientifique
                      </span>
                      <span class="font-size-16 toBbold italic">
                        Ovidus Ovidareus
                      </span>
                      <span class="margin-bottom-5 font-size-12 badge badge-pill badge-dark">
                        DESCRIPTEUR
                      </span>
                      <span class="font-size-14 toBold">
                        Bosc, 1792
                      </span>
                      <span class="margin-bottom-5 font-size-12 badge badge-pill badge-warning">
                        Nom Vernaculaire
                      </span>
                      <span class="font-size-14 toBold">
                        Oiselo
                      </span>
                      <span class="margin-bottom-5 font-size-12 badge badge-pill badge-warning">
                        Nom Vernaculaire Anglais
                      </span>
                      <span class="font-size-14 toBold">
                        Birdilo
                      </span>
                      <a title="Voir la Fiche" href="{{ path('ornito_inventory_find', {id : 2} ) }}">
                        <button type="button" class="btn btn-primary btn-lg btn-block">
                          FICHE
                          <i class="fa fa-info-circle"></i>
                        </button>
                      </a>
                    </div>
                    <hr>
                  </div>
                </div>
              </li>
            </article>
            <!--
            END ARTICLE TIMELINE
          -->
          </ul>
        </div>
        <!-- END CONTENT -->
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
  <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}{{ parent() }}
<script src="{{ asset('assets/js/select_form.js') }}"></script>
{% endblock %}
