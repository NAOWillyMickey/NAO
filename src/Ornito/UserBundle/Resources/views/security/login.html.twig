{# src/Ornito/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
  - LOGIN
{% endblock %}

{% block content %}{{ parent() }}
  <!-- CONTENT HERE -->
  {% trans_default_domain 'FOSUserBundle' %}

  <div class="col-md-12 ">
    <!-- CONTENT -->
    <div class="d-flex justify-content-center">
      <div class="row">
        <div class="d-flex justify-content-center">
          <div class="account-box">
            {% if error %}
              <div class="alert alert-danger alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-exclamation-triangle"></i>
                <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
              </div>
            {% endif %}
            <div class="logoLoginPage">
              <img src="{{asset('assets/img/logo/logo-ornithotequeLD.png') }}" alt="Logo Ornithotheque"/>
            </div>
            <form class="form-signin" action="{{ path('fos_user_security_check') }}" method="post">
              {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
              {% endif %}
              <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" placeholder="Pseudo" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" autofocus="autofocus"/>
              </div>
              <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required="required" autocomplete="current-password"/>
              </div>
              <label class="checkbox" for="remember_me">{{ 'security.login.remember_me'|trans }}
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
              </label>
              <input class="btn btn-lg btn-block btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </form>
            <a class="forgotLnk" href="">Mot de passe oublié</a>
            <div class="or-box">
              <span class="or">OU</span>
              <div class="row">
                <div class="col-md-6 row-block">
                  <a href="" class="btn btn-facebook btn-block">
                    <span class="fa fa-facebook-square fa-2x"></span></a>
                </div>
                <div class="col-md-6 row-block">
                  <a href="" class="btn btn-google btn-block">
                    <span class="fa fa-google-plus-square fa-2x"></a>
                  </div>
                </div>
              </div>
              <div class="or-box row-block">
                <div class="row">
                  <div class="col-md-12 row-block">
                    <a href="" class="btn btn-primary btn-block">Créer Mon Compte</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END CONTENT -->
  {% endblock %}
