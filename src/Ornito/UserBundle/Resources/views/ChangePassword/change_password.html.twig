{# src/Ornito/UserBundle/Ressource/views/ChangePassword/change_password.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
  - Password Resset
{% endblock %}

{% block content %}{{ parent() }}
  <!-- CONTENT HERE -->
  {% trans_default_domain 'FOSUserBundle' %}
  <!-- CONTENT -->
  <div class="container">
    <!-- ARTICLE -->
    <article class="">
      <div id="profileTabMenu">
        <!-- TAB MENU -->
        <div class="text-uppercase card-title">
          <ul class="nav nav-tabs justify-content-center" role="tablist">
            <li role="presentation" class="nav-item">
              <a href="{{ (path('fos_user_profile_edit')) }}" class="nav-link">{{ "Paramètres du Profil"|trans }}</a>
            </li>
            <li role="presentation" class="nav-item">
              <a href="{{ (path('fos_user_change_password')) }}" class="nav-link">{{ "Sécurité"|trans }}</a>
            </li>
            <li role="presentation" class="nav-item">
              <a href="{{ (path('fos_user_profile_show')) }}" class="nav-link">{{ "Profil"|trans }}</a>
            </li>
          </ul>
        </div>
      </div>
      <!-- END TAB MENU -->
      {% for key, messages in app.session.flashbag.all() %}
        {% for message in messages %}
          <div class="alert alert-{{ key }} alert-dismissable">
            <a class="panel-close close" data-dismiss="alert">×</a>
            <i class="fa fa-coffee"></i>
            <strong>{{ message|trans({}, 'FOSUserBundle') }}</strong>
          </div>
        {% endfor %}
      {% endfor %}
      <div class="container">
        <div class="row">
          <!-- BOX CONTAINER -->
          <div class="card">
            <!-- TAB PANELS GENERAL -->
            <!-- Tab panes 2 CONTACT INFOS -->
            <div class="tab-pane" id="contactConfigPanel">
              <section class="content">
                <div class="container">
                  <div class="row">
                    <!-- edit form column -->
                    <div class="col-md-12 col-sm-12 col-xs-12 personal-info">
                      <h3>{{ "Paramètre de Sécurité"|trans }}</h3>
                      <div class="form-horizontal" role="form">

                        {% trans_default_domain 'FOSUserBundle' %}
                        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                        <div class="form-group">
                          <span class="fa fa-key fa-3x social social-fb"></span>
                          <label class="col-md-3 control-label">{{ "Mon Mot de passe Actuel"|trans }}</label>
                          <div class="col-md-8">
                            {{ form_widget(form.current_password, {'attr': {'class': 'form-control' ,'placeholder' : 'Mon Pass Actuel'}}
                            ) }}
                          </div>
                        </div>
                        <div class="form-group">
                          <span class="fa fa-edit fa-3x social social-tw"></span>
                          <label class="col-md-3 control-label">{{ "Mon Nouveau Mot de passe"|trans }} (1)</label>
                          <div class="col-md-8">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' ,'placeholder' : 'Mon Nouveau Pass'}}
                            ) }}
                          </div>
                        </div>
                        <div class="form-group">
                          <span class="fa fa-exclamation-triangle fa-3x social social-gp"></span>
                          <label class="col-md-3 control-label">{{ "Mon Nouveau Mot de passe"|trans }} (2):</label>
                          <div class="col-md-8">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' ,'placeholder' : 'Mon Nouveau Pass'}}
                            ) }}
                          </div>
                        </div>
                        <div class="float-right">
                          <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}"/>
                        </div>
                        {{ form_end(form) }}

                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
            <!-- END Tab panes -->
            <!-- END Tab panes -->
          </div>
          <!-- END BOX CONTAINER -->
        </div>
        <!-- END row -->
      </div>
      <!-- END CONTAINER -->
      <hr>
    </article>
  </div>

  <!-- END CONTENT -->
{% endblock %}
