{# src/Ornito/UserBundle/Resources/views/Registration/register.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
  - REGISTER
{% endblock %}

{% block content %}{{ parent() }}
  <!-- CONTENT HERE -->
  {% trans_default_domain 'FOSUserBundle' %}

  <div class="col-md-12 ">
    <!-- CONTENT -->
    <div class="d-flex justify-content-center">
      <div class="row">
        <div class="d-flex justify-content-center">
          <div class="account-box">
            <div class="logoLoginPage">
              <img src="{{asset('assets/img/logo/logo-ornithotequeLD.png') }}" alt="Logo Ornithotheque"/>
            </div>
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signin'}}) }}
            <div class="form-group">
              {{ form_label(form.username, null, {'label_attr': {'class': 'form-control'} }) }}
              {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
              {{ form_label(form.email, null, {'label_attr': {'class': 'form-control'} }) }}
              {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'form-control'} }) }}
              {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
              {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'form-control'} }) }}
              {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
            </div>
            <div>
              <input class="btn btn-lg btn-block btn-success" type="submit" value="{{ 'registration.submit'|trans }}"/>
            </div>
            {{ form_end(form) }}
            <div class="or-box">
              <p class="center">{{ "OU CONNECTEZ VOUS AVEC"|trans }} :</p>
              <div class="row">
                <div class="col-md-6 row-block">
                  <a href="" class="btn btn-facebook btn-block">
                    <span class="fa fa-facebook-square fa-2x"></span></a>
                </div>
                <div class="col-md-6 row-block">
                  <a href="" class="btn btn-google btn-block">
                    <span class="fa fa-google-plus-square fa-2x"></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END CONTENT -->
  {% endblock %}
