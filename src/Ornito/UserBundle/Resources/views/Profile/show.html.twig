{# src/Ornito/UserBundle/Ressource/views/Profile/show.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
  - Profile
{% endblock %}

{% block content %}{{ parent() }}
  <!-- CONTENT HERE -->
  {% trans_default_domain 'FOSUserBundle' %}
  <!-- PAGE TITLE -->
  <h1 class="band_title deepshd">
    <span class="profil_img">
      <img title="{{ user.username }}" class="profil-picture-big shadowed-1" src="{{ asset('assets/uploads/users/userPic.jpg') }}" alt="User Picture {{ user.username }}">
      <!-- <i class="fa fa-user shadowed" aria-hidden="true"></i> -->
    </span>
    {{ user.username }}
    <div class="float-right">
      <span class=" shadowed-1 margin-left-10 badge badge-success dropdown-name">
        {% for role in user.roles %}
          {% if role == "ROLE_MEMBER" %}
            {{ 'Membre'|trans }}
          {% endif %}
          {% if role == "ROLE_NATURALIST" %}
            {{ 'Naturaliste'|trans }}
          {% endif %}
          {% if role == "ROLE_SUPER_ADMIN" %}
            {{ 'Admin'|trans }}
          {% endif %}
        {% endfor %}
      </span>
      <i class="fa fa-user"></i>
    </div>
  </h1>
  <!-- END PAGE OPTION MENU -->
  <!-- CONTENT CONTAINER -->
  <hr>
  <div class="col-xs-12 col-md-12 col-lg-12 container">
    <div class="row">
      <div class="col-md-12 ">
        <!-- CONTENT -->
        <div class="container">
          <!-- ARTICLE -->
          <article class="">
            <div id="profileTabMenu">
              <!--START Option panel Menu -->
              <div class="margin-top-0 float-right btn-group">
                <button type="button" class="btn btn-primary btn-sm" data-toggle="dropdown">
                  <i class="fa fa-ellipsis-h"></i>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <a href="#">Action</a>
                  </li>
                  <li>
                    <a href="#">Another action</a>
                  </li>
                  <li>
                    <a href="#">Something else</a>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <a href="#">Separated link</a>
                  </li>
                </ul>
              </div>
              <!--END Option panel Menu -->
              <!-- TAB MENU -->
              <div class="text-uppercase card-title">
                <ul class="nav nav-tabs justify-content-center" role="tablist">
                  <li role="presentation" class="nav-item active">
                    <a href="#profilePanel" aria-controls="profilePanel" role="tab" data-toggle="tab" class="font-size-14 nav-link">Profil</a>
                  </li>
                  <li role="presentation" class="nav-item">
                    <a href="#obsProfilePanel" aria-controls="obsProfilePanel" role="tab" data-toggle="tab" class="nav-link">Mes Obs</a>
                  </li>
                  <li role="presentation" class="nav-item">
                    <a href="#naturalistProfilePanel" aria-controls="naturalistProfilePanel" role="tab" data-toggle="tab" class="nav-link">Naturaliste</a>
                  </li>
                  <li role="presentation" class="nav-item">
                    <a href="{{ (path('fos_user_profile_edit')) }}" class="nav-link">Admin</a>
                  </li>
                </ul>
              </div>
            </div>
            {% for key, messages in app.session.flashbag.all() %}
              {% for message in messages %}
                <div class="alert alert-{{ key }}">
                  {{ message|trans({}, 'FOSUserBundle') }}
                </div>
              {% endfor %}
            {% endfor %}
            <!-- END TAB MENU -->
            <div class="container">
              <div class="row">
                <!-- BOX CONTAINER -->
                <div class="card">
                  <!-- TAB PANELS CONTENT -->
                  <div class="tab-content">
                    <!-- Tab panes 1 PROFIL -->
                    <div role="tabpanel" class="col-md-12 tab-pane active" id="profilePanel">
                      <section>
                        <div class="float-left">
                          <span>
                            <img title="{{ user.username }}" class="profil-picture-big shadowed-1" src="{{ asset('assets/uploads/users/userPic.jpg') }}" alt="User Picture {{ user.username }}">
                            <!-- <i class="fa fa-user shadowed" aria-hidden="true"></i> -->
                          </span>
                          <span class="margin-left-10  badge badge-success dropdown-name">{{ user.username }}</span>
                          <hr>
                          <div>
                            <h2>{{ user.firstName }}
                              {{ user.lastName }}</h2>
                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="float-left">
                            <ul class="list-group">
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-envelope-square fa-3x social social-em"></span>{{ user.email }}
                                </a>
                              </li>
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-facebook-square fa-3x social social-fb"></span>{{ user.facebook }}
                                </a>
                              </li>
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-google-plus-square fa-3x social social-gp"></span>{{ user.googleplus }}
                                </a>
                              </li>
                            </ul>
                          </div>
                          <div class="float-left">
                            <ul class="list-group">
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-twitter-square fa-3x social social-tw"></span>{{ user.twitter }}
                                </a>
                              </li>
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-pinterest-square fa-3x social social-gp"></span>{{ user.pinterest }}
                                </a>
                              </li>
                              <li class="list-group-item">
                                <a class="social" href="">
                                  <span class="fa fa-linkedin-square fa-3x social social-fb"></span>{{ user.linkedin }}
                                </a>
                              </li>
                            </ul>
                          </div>
                        </div>
                        <div class="float-left col-md-10 offset-1">
                          <p>{{ user.bio }}
                          </p>
                        </div>
                      </section>
                    </div>
                    <!-- Tab panes 2 MEMBRE -->
                    <div role="tabpanel" class="tab-pane" id="obsProfilePanel">
                      <section class="content">
                        <div class="col-md-12">
                          <div class="panel panel-default">
                            <div class="panel-body">
                              <div class="pull-right">
                                <div class="btn-group">
                                  <button type="button" class="btn btn-success btn-filter" data-target="attested">Validé</button>
                                  <button type="button" class="btn btn-warning btn-filter" data-target="untreated">En attente</button>
                                  <button type="button" class="btn btn-danger btn-filter" data-target="rejected">Invalide</button>
                                  <button type="button" class="btn btn-default btn-filter" data-target="all">Tous</button>
                                </div>
                              </div>
                              <div class="table-container">
                                <table class="table table-filter">
                                  <tbody>
                                    {% for watching in user.watchings %}
                                      <tr data-status="{{ watching.validateStatus }}">
                                        <td>
                                          <div class="ckbox">
                                            <input type="checkbox" id="checkbox1">
                                            <label for="checkbox1"></label>
                                          </div>
                                        </td>
                                        <td>
                                          <a title="Voir l'Obs" href="{{ path('ornito_observation_view', {'id' : watching.id } ) }}">
                                            <i class="fa fa-eye"></i>
                                          </a>
                                          <a title="Modifier" href="{{ path('ornito_observation_edit', {'id' : watching.id } ) }}">
                                            <i class="fa fa-edit"></i>
                                          </a>
                                          <a title="Supprimer" href="{{ path('ornito_observation_delete', {'id' : watching.id } ) }}">
                                            <i class="fa fa-trash"></i>
                                          </a>
                                        </td>
                                        <td>
                                          <div class="media">
                                            <div class="media-body">
                                              <span class="media-meta pull-right">{{ watching.date }}</span>
                                              <h4 class="title">
                                                {% for specie in watching.species %}
                                                  {{ specie.scientificName }}
                                                {% endfor %}
                                                <span class="pull-right valid">({{ watching.validateStatus }})</span>
                                              </h4>
                                              <p class="summary">{{ watching.title }}</p>
                                            </div>
                                          </div>
                                        </td>
                                      </tr>
                                    {% endfor %}
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                          <div class="content-footer">
                            <p>
                              My Obs'
                            </p>
                          </div>
                        </div>
                      </section>
                    </div>
                    <!-- Tab panes 3 NAURALISTE -->
                    <div role="tabpanel" class="tab-pane" id="naturalistProfilePanel">
                      <section class="content">
                        <div class="col-md-12">
                          <div class="panel panel-default">
                            <div class="panel-body">
                              <div class="pull-right">
                                <div class="btn-group">
                                  <button type="button" class="btn btn-success btn-filter" data-target="attested">J'ai validé</button>
                                  <button type="button" class="btn btn-danger btn-filter" data-target="rejected">J'ai refusé</button>
                                  <button type="button" class="btn btn-default btn-filter" data-target="all">Tous</button>
                                </div>
                              </div>
                              <div class="table-container">
                                <table class="table table-filter">
                                  <tbody>
                                    <tr data-status="valid">
                                      <td>
                                        <div class="ckbox">
                                          <input type="checkbox" id="checkbox1">
                                          <label for="checkbox1"></label>
                                        </div>
                                      </td>
                                      <td>
                                        <a title="Voir l'Obs" href="">
                                          <i class="fa fa-eye"></i>
                                        </a>
                                      </td>
                                      <td>
                                        <div class="media">
                                          <a href="#" class="pull-left">
                                            <span class="profil-img">
                                              <a title="Voir le profil" href=""><img title="John D." class="profil-picture shadowed" src="https://pixnio.com/free-images/2017/02/08/2017-02-08-17-43-06-725x467.jpg" alt=""></a>
                                              <!-- <i class="fa fa-user shadowed" aria-hidden="true"></i> -->
                                            </span>
                                            <span class="margin-left-10  badge badge-success dropdown-name">John D.</span>
                                          </a>
                                          <div class="media-body">
                                            <span class="media-meta pull-right">13 Février 2018</span>
                                            <h4 class="title">
                                              Héron Cendré
                                              <span class="pull-right valid">(Validé)</span>
                                            </h4>
                                            <p class="summary">Parc de la tête d'Or 69006 LYON</p>
                                          </div>
                                        </div>
                                      </td>
                                    </tr>
                                    <tr data-status="invalid">
                                      <td>
                                        <div class="ckbox">
                                          <input type="checkbox" id="checkbox2">
                                          <label for="checkbox2"></label>
                                        </div>
                                      </td>
                                      <td>
                                        <a title="Voir l'Obs" href="">
                                          <i class="fa fa-eye"></i>
                                        </a>
                                      </td>
                                      <td>
                                        <div class="media">
                                          <a href="#" class="pull-left">
                                            <span class="profil-img">
                                              <a title="Voir le profil" href=""><img title="John D." class="profil-picture shadowed" src="https://pixnio.com/free-images/2017/02/08/2017-02-08-17-43-06-725x467.jpg" alt=""></a>
                                              <!-- <i class="fa fa-user shadowed" aria-hidden="true"></i> -->
                                            </span>
                                            <span class="margin-left-10 badge badge-success dropdown-name">Benjamin D.</span>
                                          </a>
                                          <div class="media-body">
                                            <span class="media-meta pull-right">13 Février 2018</span>
                                            <h4 class="title">
                                              Faucon Pelerin
                                              <span class="pull-right invalid">(Non validé)</span>
                                            </h4>
                                            <p class="summary">La Part Dieu 69006 LYON</p>
                                          </div>
                                        </div>
                                      </td>
                                    </tr>
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                          <div class="content-footer">
                            <p>
                              Footer
                            </p>
                          </div>
                        </div>
                      </section>
                    </div>
                  </div>
                  <!-- END BOX CONTAINER -->
                </div>
                <!-- END row -->
              </div>
              <!-- END CONTAINER -->
              <hr>
            </article>
          </div>
          <!-- END CONTENT -->
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
    <!-- END CONTENT -->
  {% endblock %}
