{# The add observation form #}

<div id="birdNewObsSearhForm" class="">
  {{ form_start(form, {'attr': {'id': 'birdNewObsSearhForm', 'name': 'birdNewObsSearhForm', 'class': 'form-inline'}}) }}
  {{ form_errors(form) }}
  <div class="center margin-top-10 col-md-4">
    <label for="newObsBirdTitle" class="input-group-addon">{{ 'Titre'|trans }}</label>
    {{ form_errors(form.title) }}
    {{ form_widget(form.title, {'attr': {'id': 'newObsBirdTitle', 'name': 'newObsBirdTitle', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm', 'placeholder': 'Titre' }}) }}
  </div>
</br>
<div class="center margin-top-10 col-md-8">
  <label for="newObsBirdComment" class="marginAuto input-group-addon">{{ 'Commentaire'|trans }}</label>
  {{ form_errors(form.description) }}
  {{ form_widget(form.description, {'attr': {'id': 'newObsBirdComment', 'name': 'newObsBirdComment', 'class': 'form-control', 'rows': '8', 'cols': '45', 'placeholder': 'Mon Commentaire' }}) }}
</div>
<hr>
<div id="localisation-card" class="col-md-12 container margin-top-25">
  <div class="col-md-6 center marginAuto float-left">
    <div class="marginAuto">
      <label for="newObsBirdSciName" class="input-group-addon">{{ "Nom Scientifique"|trans }}</label>
      {{ form_errors(form.species) }}
      {{ form_widget(form.species, {'attr': {'id': 'newObsBirdSciName', 'class': 'custom-select' }}) }}
      <label for="ref-nomVernaculaire" class="input-group-addon">{{ "Nom Vernaculaire"|trans }}</label>
      <select id="ref-nomVernaculaire" class="custom-select" name="vernFr">
        <option disabled="disabled" selected="selected" value="emptyVern"></option>
          {% for key, value in vernList %}
            <option value="{{ key }}">{{ value }}</option>
          {% endfor %}
      </select>
      <label for="newObsBirdLng" class="margin-top-25 input-group-addon">{{ "Longitude"|trans }}</label>
      {{ form_errors(form.longitude) }}
      {{ form_widget(form.longitude, {'attr': {'id': 'newObsBirdLng', 'placeholder': 'Longitude', 'class':'form-control', 'name': 'newObsBirdLng', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
      <label for="newObsBirdLat" class="input-group-addon">{{ "Latitude"|trans }}</label>
      {{ form_errors(form.latitude) }}
      {{ form_widget(form.latitude, {'attr': {'id': 'newObsBirdLat', 'placeholder': 'Latitude', 'class':'form-control', 'name': 'newObsBirdLat', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
      <br />
      {% if watching is defined %}
        <button id="newObsGeolocalisatorReset" type="button" class="margin-top-25 btn btn-warning btn-xs marginAuto">
            {{ "Annuler"|trans }}
        </button>
      {% endif %}
      <button id="newObsGeolocalisatorButtonForm" type="button" class="margin-top-25 btn btn-primary btn-xs marginAuto">
        {{ "Géolocaliser"|trans }}
      </button>
    </div>
  </div>
  <div class="col-md-6 float-right">
    <h5 class="font-size-12 modal-title">{{ "Selectionnez un point sur la Map ou Utilisez la Géolocalisation"|trans }}</h5>
    <h6 class="font-size-12 modal-title">{{ "Appuyez sur OK, Les coordonnées sont récupérées automatiquement"|trans }}</h6>
    <div id="newObsMap"></div>
  </div>
</div>
<hr/>
<div class="col-md-12 margin-top-25">
  <label class="custom-file-label" for="customFile">{{ 'Image'|trans }}</label>
  {{ form_errors(form.image) }}
  {{ form_widget(form.image, {'attr': {'id': 'newObsPicture', 'class': 'marginAuto custom-file-input text-center center-block well well-sm' }}) }}
</div>
<hr />
<div class="container d-sm-flex d-md-inline-flex align-content-around flex-wrap margin-top-25 ">
  {% if watching is defined %}
  <div class="col-sm-6 d-flex justify-content-center order-sm-1 order-md-1 margin-top-10">
    <input id="newObsBirdFormSubmit" type="submit"  value="{{ "valider"|trans }}"  name="newObsBirdFormSubmit" class="btn  btn-outline-success"/>
  </div>
  <div class="col-sm-6 d-flex justify-content-center order-sm-0 order-md-0 margin-top-10">
    <a class="btn btn-outline-info" role="button" href="{{ path('ornito_observation_view', { 'id' : watching.id }) }}">{{ "Revenir à L'Obs'"|trans }}</a>
  </div>
  {% else %}
    <div class="col-md-12 d-flex justify-content-center">
      <input id="newObsBirdFormSubmit" type="submit"  value="{{ "valider"|trans }}"  name="newObsBirdFormSubmit" class="btn  btn-outline-success"/>
    </div>
  {% endif %}
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
</div>
