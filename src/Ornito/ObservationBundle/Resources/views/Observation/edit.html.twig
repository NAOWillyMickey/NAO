{# src/Ornito/ObservationBundle/Ressource/views/Observation/add.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}
    - Obs - {{ "Edition"|trans }}
{% endblock %}
{% block stylesheets %}{{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
{% endblock %}
{% block content %}{{ parent() }}
    <!-- CONTENT HERE -->
    <!-- PAGE TITLE -->
    <h1 class="band_title deepshd">{{ "Modifier Obs'"|trans }}</h1>
    <div class="col-xs-12 col-md-12 col-lg-12 ">
        <!-- CONTENT -->
        <div id="content" class="col-xs-10 offset-1">
            <ul class="timeline">
                <!-- TIMELINE ARTICLE -->
                <article class="timeline">
                    <li class="timeline-inverted">
                        <aside class="timeline-badge">
                            <a title={{ "Profil"|trans }} href="{{ (path('fos_user_profile_show')) }}">
                                <span class="profil-img">
                                  {% if app.user.avatar == null %}
                                      <i class="fa fa-user shadowed" aria-hidden="true"></i>
                                  {% else %}
                                      <img title="{{ app.user.username }}" class="profil-picture shadowed" src="{{ asset(app.user.avatar.webPath) }}" alt="{{ app.user.avatar.alt }}">
                                  {% endif %}
                                </span>
                                <span class="margin-left-10 badge badge-success dropdown-name">{{ app.user.username}}</span>
                                <i title="Observation" class="fa fa-binoculars"></i>
                            </a>
                        </aside>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <section>
                                    <div>
                                        <!-- Include Form -->
                                        {{ include("OrnitoObservationBundle:Observation:form.html.twig") }}
                                    </div>
                                    <!-- END birdNewObsSearhForm CONTAINER -->
                                </section>
                            </div>
                        </div>
                    </li>
                </article>
            </ul>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- /#page-content-wrapper -->
    <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}{{ parent() }}
    <script src="{{ asset('assets/js/edit_obs.js') }}"></script>
    <script src="{{ asset('assets/js/add_edit_select_list.js') }}"></script>
{% endblock %}
